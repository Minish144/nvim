{
  // json:     https://github.com/neoclide/coc-json
  // python:   https://github.com/fannheyward/coc-pyright
  // golang:   https://github.com/josa42/coc-go
  // explorer: https://github.com/weirongxu/coc-explorer
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "nvim-web-devicons",
  "explorer.width": 45,
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS[hidden & 1]",
  "explorer.file.root.template": "[icon & 1] PROJECT[hidden & 1] [fullpath]",
  "explorer.file.showHiddenFiles": true,
  "explorer.file.cdCommand": "cd"
}
